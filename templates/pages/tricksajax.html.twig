              <div class="d-flex justify-content-center card-body">
                <div class="mr-auto p-2 ">
                  <h5 class="card-title">
                    {{ tricks.name }}
                  </h5>
                </div>
                <div class="p-2">
                  <a href="{{ path('trick.edit', {id: tricks.id, name: tricks.name})}}"
