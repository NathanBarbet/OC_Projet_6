{% extends 'base.html.twig' %}

{% block title %}SnowTricks{% endblock %}

{% block javascripts %}
  {{ parent() }}

  <script src="{{ asset('vendor/loadmore/app.js')}}"></script>
{% endblock %}

{% block body %}
  <!-- Header -->
  <header id="nav" class="masthead col-lg-12 text-truncate">
    <div class="container col-lg-12 d-flex h-100 align-items-center">
      <div class="mx-auto col-lg-12 text-center">
        <h1 class="mx-auto my-0 text-uppercase col-lg-12 text-truncate">SnowTricks</h1>
        <h2 class="text-white-50 mx-auto mt-2 mb-5 col-lg-12">Site communautaire</h2>
        <a href="#projects" class="btn btn-primary js-scroll-trigger">Tricks</a>
      </div>
    </div>
  </header>

  <!-- Projects Section -->
  {% if app.user and app.user.isactive == 0 %}
    <div class="border text-center">N'oubliez pas d'activer votre compte grâce à l'email pour apportez des modifications aux tricks.</div>
  {% endif %}
  {% if app.user and app.user.isvalide == 0 %}
    <div class="border text-center">Votre compte est en attente de validation par un administrateur.</div>
  {% endif %}
  <section id="projects" class="bg-light">

    {% if app.user and app.user.isactive == 1 and app.user.isvalide == 1 %}
      <a href="{{ path('addtrick')}}" class="btn btn-secondary mt-3 mb-3 ml-5">Nouveau Trick</a>
    {% endif %}
  <div id="tricksResult">

  </div>
  <button id="btnLoadMore" class="btn btn-secondary mt-3 mb-3 ml-5" data-page="0">Voir plus</button>
  </section>
  <a href="#nav" id="scrollToTop" class="btn btn-primary js-scroll-trigger">
  <i class="fas fa-arrow-up"></i>
  </a>

{% endblock %}
